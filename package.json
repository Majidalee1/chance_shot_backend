{
  "name": "koa2-boot-ts",
  "version": "1.0.0",
  "description": "An opinionated boilerplate for koa v2 with typescript",
  "scripts": {
    "start": "node -r  dotenv/config bin/server dotenv_config_path=env/development",
    "watch": "nodemon --exec npm start",
    "lint": "tslint 'src/**/*.ts'",
    "lint:fix": "tslint 'src/**/*.ts' --fix",
    "test": "jest"
  },
  "author": "Mohammad Umair Khan <mohammad.umair.k@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/koa-bunyan-logger": "^2.1.4",
    "@sendgrid/mail": "^6.3.1",
    "bcryptjs": "^2.4.3",
    "boom": "^7.1.1",
    "convict": "^6.2.1",
    "debug": "^4.3.2",
    "dotenv": "^10.0.0",
    "joi": "17.4.2",
    "jsonwebtoken": "8.3.0",
    "jwt-decode": "2.2.0",
    "koa": "^2.13.4",
    "koa-body": "^4.2.0",
    "koa-bunyan-logger": "^2.1.0",
    "koa-compose": "^4.1.0",
    "koa-json": "^2.0.2",
    "koa-router": "^10.1.1",
    "mysql2": "1.6.1",
    "node-irr": "^2.0.3",
    "sequelize": "4.38.0",
    "ts-node": "^10.3.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/boom": "^7.3.1",
    "@types/bunyan": "^1.8.7",
    "@types/convict": "^6.1.1",
    "@types/debug": "^4.1.7",
    "@types/jest": "^27.0.2",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "7.2.8",
    "@types/jwt-decode": "2.2.1",
    "@types/koa": "^2.13.4",
    "@types/koa-json": "^2.0.20",
    "@types/koa-router": "^7.4.4",
    "@types/sequelize": "4.27.24",
    "body-parser": "^1.19.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.3",
    "moment": "^2.29.1",
    "nodemon": "^2.0.14",
    "sequelize-cli": "4.0.0",
    "ts-jest": "^27.0.7",
    "tslint": "^5.20.1",
    "typescript": "^4.4.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "tslint",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
